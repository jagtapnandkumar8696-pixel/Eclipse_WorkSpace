package LoopsExample;

public class Pyramid6 {

	public static void main(String[] args) {
		int a=7;
       for(int i=1;i<=a;i++)
       {
    	   for(int j=a;j>=1;j--)
           {
        	   System.out.print("*");
           }
    	   for(int k=a;k>=a-1-i;k--)
           {
        	   System.out.print(" ");
           }
    	   System.out.println();
       }

		
	}

}
