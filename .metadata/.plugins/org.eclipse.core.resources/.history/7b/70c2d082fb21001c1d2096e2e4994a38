	public  ArrayList test(int id)
	{    Response sr=RestAssured.get("https://reqres.in/api/users/"+id);
	
		String str=sr.asString();
		
		int a=sr.getStatusCode();
		 ar=new ArrayList();
		ar.add(str);
		ar.add(a);
		return ar;
		
	}
