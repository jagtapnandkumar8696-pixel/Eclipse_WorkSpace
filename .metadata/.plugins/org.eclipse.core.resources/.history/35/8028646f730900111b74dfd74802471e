package JavaArray;

public class Pyramid {

	public static void main(String[] args) {
		int i,j;
		int row =6;
		
		for (i=0;i<=6;i++)
		{
			for (j=row-i;j>1;j--)
			{
				System.out.print(" ");
			}
			
			for (j=0;j<=i;j++)
			{
				System.out.print("* ");
			}
			System.out.println();
			
		}
		     

	}

}
