public class Pattern {
    public static void main(String[] args) {

        int[] starCount = {5, 4, 2, 1};   // stars in each row

        for (int i = 0; i < starCount.length; i++) {

            // Print spaces
            for (int s = 0; s < i; s++) {
                System.out.print(" ");
            }

            // Print stars
            for (int j = 0; j < starCount[i]; j++) {
                System.out.print("* ");
            }

            System.out.println();
        }
    }
}
