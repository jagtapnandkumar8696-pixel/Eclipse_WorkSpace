package Programs;

public class Pattern2 {

	public static void main(String[] args) {
		// TODO Auto-generated method stub
  int row =6;
  for (int i=0;i<row;i++)
  {
	  for(int j=row-1;j<1;j--)
	  {
		  System.out.println(" ");
		  
	  }
	  for(int j=i;j>=0;j--)
	  {
		  System.out.println(" ");
		  
	  }
  }
	}

}
